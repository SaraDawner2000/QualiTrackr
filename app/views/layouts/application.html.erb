<!DOCTYPE html>
<html>
  <head>
    <title>QualityTrackr</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <%= render "shared/cdn_links" %>

    <% @image_path = asset_path('hardhat.jpg') %>

    <style>
      .mask-custom {
        backdrop-filter: blur(3px);
        background-color: rgba(0,0,0,0.7);
      }
      .nav.nav-pills .nav-link{
          color: #f8f9fa; /* Bootstrap light background color */
      }
      .nav.nav-pills .nav-link.active {
          background-color: #f8f9fa; /* Bootstrap light background color */
          color: #212529; /* Bootstrap dark text color */
      }
      .display-1 {
        font-size: 10rem;
      }

      .card-background {
        background-image: url('<%= @image_path %>');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 500px;
        
      }
    </style>

  </head>

  <body>
    <% unless @no_default_navbar%>
      <div class="mb-2">
        <%= render "shared/nav" %>
      </div>

      <div class="mb-2">
        <%= render "shared/flash" %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
  <footer>
    <a href="https://www.flaticon.com/free-icons/pdf" title="pdf icons">Icons created by Freepik - Flaticon</a>
  </footer>
</html>
