<div class="container mb-2">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <div class="card">
                <div class="card-header text-center">
                    <h5 class="mb-0">Current Tasks</h5>
                </div>
                <div class="card-body text-center">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <p class="mb-0">Purchase order # required: <strong><%= QualityProject.not_sold.count %></strong> projects</p>
                        </li>
                        <li class="list-group-item">
                            <p class="mb-0">Inspection plan required: <strong><%= QualityProject.sold.without_inspection_plan.count %></strong> projects</p>
                        </li>
                        <li class="list-group-item">
                            <p class="mb-0">Parts to be measured: <strong><%= Part.with_inspection_plan.drawing_attached.not_measured.count %></strong> parts</p>
                        </li>
                        <li class="list-group-item">
                            <p class="mb-0">Inspection approval required: <strong><%= QualityProject.part_measured.report_not_approved.count %></strong> projects</p>
                        </li>
                        <li class="list-group-item">
                            <p class="mb-0">Record assembly required: <strong><%= QualityProject.report_approved.record_not_assembled.count %></strong> projects</p>
                        </li>
                        <li class="list-group-item">
                            <p class="mb-0">Record approval required: <strong><%= QualityProject.record_assembled.record_not_approved.count %></strong> projects</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>
