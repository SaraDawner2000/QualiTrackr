<tr>
    <% if part.quality_project %>
    <td><%= link_to part.quality_project.id, quality_project_path(part.quality_project) %></td>
    <td><%= part.quality_project.customer %></td>
    <% else %>
    <td>subcomponent</td>
    <td></td>
    <% end %>
    <td><%= link_to part.number, part_path(part) %></td>
    <td><%= part.revision %></td>
    <td><%= part.base_material %></td>
    <td><%= part.finish %></td>
    <% if part.measured_status %>
        <td class="text-success">Measured</td>
    <% else%>
        <td class="text-danger">Not measured</td>
    <% end %>
</tr>