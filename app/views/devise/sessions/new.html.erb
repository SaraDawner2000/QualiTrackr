<div class="card" style="width: 100%; max-width: 400px; margin: auto; margin-top: 50px;">
  <div class="card-header">
    <h5 class="card-title text-center">Log in</h5>
  </div>
  <div class="card-body">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs mb-3">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control" },
                    label: "Email" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control" },
                    label: "Password" %>
        <%= f.input :remember_me, as: :boolean, label: "Remember me" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-end">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="card-footer text-center">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-secondary" %>
  </div>
</div>
